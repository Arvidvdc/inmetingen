<%- include("../partials/header") -%>

<div class="center">
    <div class="row"><h3>Daktype bewerken</h3></div>
    <div class="gallery">
        <form action="/maintenance/dak/<%= foundRoof._id %>?_method=PUT" method="post">
            <div class="row">
                <div class="col-6"><label for="dakplaat">dak type</label></div>
                <div class="col-6">
                    <input type="text" id="dakplaat" name="dakplaat" value="<%= foundRoof.dakplaat %>" autofocus required>
                </div>
            </div>
            <div class="row">
                <div class="col-6"><label for="omschrijving">Beschrijving</label></div>
                <div class="col-6">
                    <input type="text" id="omschrijving" name="omschrijving" value="<%= foundRoof.dakplaatomschrijving %>">
                </div>
            </div>

            <div class="row">
                <hr>
                <button class="but but-oker" id="supportButton" onclick="changeCheckboxes(event)">Alles selecteren</button>
            </div>

            <div class="row">
                <hr>
                <div class="col-6">Geschikt voor type veranda:</div>
                <div class="col-2"><label for="designline">Designline</label></div>
                <div class="col-1"><input type="checkbox" id="designline" name="designline" <%= foundRoof.designline === true ? 'checked' : '' %>></div>
                <div class="col-2"><label for="ecoline">Ecoline</label></div>
                <div class="col-1"><input type="checkbox" id="ecoline" name="ecoline" <%= foundRoof.ecoline === true ? 'checked' : '' %>></div>
            </div>
            <div class="row">
                <div class="col-6"></div>
                <div class="col-2"><label for="luxline">Luxline</label></div>
                <div class="col-1"><input type="checkbox" id="luxline" name="luxline" <%= foundRoof.luxline === true ? 'checked' : '' %>></div>
                <div class="col-2"><label for="topline">Topline</label></div>
                <div class="col-1"><input type="checkbox" id="topline" name="topline" <%= foundRoof.topline === true ? 'checked' : '' %>></div>
            </div>
            <div class="row">
                <div class="col-6"></div>
                <div class="col-2"><label for="trendline">Trendline</label></div>
                <div class="col-1"><input type="checkbox" id="trendline" name="trendline" <%= foundRoof.trendline === true ? 'checked' : '' %>></div>
                <div class="col-2"><label for="ultraline">Ultraline</label></div>
                <div class="col-1"><input type="checkbox" id="ultraline" name="ultraline" <%= foundRoof.ultraline === true ? 'checked' : '' %>></div>
            </div>

            <div class="row buttonRow">
                <div class="col-7"><input class="but but-oker" style="float: right;" type="reset" value="Herstellen"></div>
                <div class="col-5"><input class="but but-oker" style="float: right;" type="submit" value="Bijwerken"></div>
            </div>
        </form>
    </div>
</div>

<script src="/js/roof.js"></script>
<%- include("../partials/footer") -%>