<%- include("../partials/header") -%>

<div class="center">
    <div class="row"><h3>Nieuw daktype</h3></div>
    <div class="gallery">
        <form action="/maintenance/dak/new" method="post">
            <div class="row">
                <div class="col-6"><label for="dakplaat">dak type</label></div>
                <div class="col-6">
                    <input type="text" id="dakplaat" name="dakplaat" autofocus required>
                </div>
            </div>
            <div class="row">
                <div class="col-6"><label for="omschrijving">Beschrijving</label></div>
                <div class="col-6">
                    <input type="text" id="omschrijving" name="omschrijving" placeholder="Glas 4.4/2 helder">
                </div>
            </div>

            <div class="row">
                <hr>
                <button class="but but-oker" id="supportButton" onclick="changeCheckboxes(event)">Alles selecteren</button>
            </div>

            <div class="row">
                <hr>
                <div class="col-6">Geschikt voor type veranda:</div>
                <div class="col-2"><label for="designline">Designline</label></div>
                <div class="col-1"><input type="checkbox" id="designline" name="designline"></div>
                <div class="col-2"><label for="ecoline">Ecoline</label></div>
                <div class="col-1"><input type="checkbox" id="ecoline" name="ecoline"></div>
            </div>
            <div class="row">
                <div class="col-6"></div>
                <div class="col-2"><label for="luxline">Luxline</label></div>
                <div class="col-1"><input type="checkbox" id="luxline" name="luxline"></div>
                <div class="col-2"><label for="topline">Topline</label></div>
                <div class="col-1"><input type="checkbox" id="topline" name="topline"></div>
            </div>
            <div class="row">
                <div class="col-6"></div>
                <div class="col-2"><label for="trendline">Trendline</label></div>
                <div class="col-1"><input type="checkbox" id="trendline" name="trendline"></div>
                <div class="col-2"><label for="ultraline">Ultraline</label></div>
                <div class="col-1"><input type="checkbox" id="ultraline" name="ultraline"></div>
            </div>

            <div class="row buttonRow">
                <div class="col-7"><input class="but but-oker" style="float: right;" type="reset" value="Herstellen"></div>
                <div class="col-5"><input class="but but-oker" style="float: right;" type="submit" value="Toevoegen"></div>
            </div>
        </form>
    </div>
</div>

<script src="/js/roof.js"></script>
<%- include("../partials/footer") -%>