<%- include("../partials/header") -%>

<div class="center">
    <div class="row"><h3>Product bewerken</h3></div>
    <div class="gallery">
        <form action="/maintenance/product/<%= foundProduct._id %>?_method=PUT" method="post">
            <div class="row">
                <div class="col-6"><label for="product">Product</label></div>
                <div class="col-6">
                    <input type="text" id="product" name="product" value="<%= foundProduct.product %>" autofocus required>
                </div>
            </div>
            <div class="row">
                <div class="col-6"><label for="categorie">Categorie</label></div>
                <div class="col-6">
                    <select name="categorie" id="categorie">
                        <option value="veranda" <%= foundProduct.categorie === 'veranda' ? 'selected' : '' %>>Veranda</option>
                        <option value="gsw" <%= foundProduct.categorie === 'gsw' ? 'selected' : '' %>>Glasschuifwand (GSW)</option>
                        <option value="zonwering" <%= foundProduct.categorie === 'zonwering' ? 'selected' : '' %>>Zonwering</option>
                        <option value="overig" <%= foundProduct.categorie === 'overig' ? 'selected' : '' %>>Overige</option>
                    </select>
                </div>
            </div>

            <div class="row buttonRow">
                <div class="col-7"><input class="but but-oker" style="float: right;" type="reset" value="Herstellen"></div>
                <div class="col-5"><input class="but but-oker" style="float: right;" type="submit" value="Bijwerken"></div>
            </div>
        </form>
    </div>
</div>

<%- include("../partials/footer") -%>