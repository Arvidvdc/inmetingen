<%- include("../partials/header") -%>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

    <div class="container">
        <div class="center">
            <div class="row nawIndex">
                <h3 style="float: left; margin-top: 0px;">KLANTOVERZICHT</h3>
                <form class="zoek" action="/naw" style="float: right; width: 50%; margin-bottom: 5px;">
                    <input type="text" placeholder="Zoeken.." name="search">
                    <button type="submit"><i class="fa fa-search"></i></button>
                </form>
            </div>
            <div class="gallery nawIndex">
                <div class="row" style="text-align: center;">
                </div>
                <% foundNAW.forEach(name => { %>
                    <div class="row">
                        <a href="/naw/<%= name._id %>"><%= typeof name.klantnummer !== 'undefined' && name.klantnummer !== null ? name.klantnummer + ' - ' : '' %><%= typeof name.achternaam !== 'undefined' ? name.achternaam : '' %><%= typeof name.woonplaats !== 'undefined' && name.woonplaats.length >= 1 ? ' - ' + name.woonplaats : '' %></a>
                    </div>
                <% }); %>
            </div>
        </div>
    </div>

<%- include("../partials/footer") -%>