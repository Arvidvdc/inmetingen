<%- include("../partials/header") -%>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

    <div class="container">
        <div class="center">
            <div class="row nawIndex">
                <div class="row nawRow1"><h3 style="margin: 10px 4px;">KLANTOVERZICHT</h3></div>
                <div class="row nawRow2">
                    <form class="zoek" action="/naw">
                        <div class="row" style="display: flex;">
                            <div style="display: flex;">
                                <input type="text" placeholder="Zoeken..." name="search">
                            </div>
                            <div>
                                <button class="but but-oker fa fa-search" type="submit" style="font-size: large;"></button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            <div class="indexNAW <%= foundNAW.length==1 ? 'solo' : '' %>">
                <% foundNAW.forEach(name => { %>
                    <div class="gallery" onclick="javascript:location.href='/naw/<%= name._id %>'">
                        <div class="row">
                            <%= typeof name.achternaam !== 'undefined' ? name.achternaam : '' %><%= typeof name.woonplaats !== 'undefined' && name.woonplaats.length >= 1 ? ' - ' + name.woonplaats : '' %>
                        </div>
                    </div>
                <% }); %>
            </div>
        </div>
    </div>

<%- include("../partials/footer") -%>